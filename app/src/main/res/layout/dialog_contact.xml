<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00421414"
    >


    <TextView
        android:id="@+id/dialog_name_id"
        android:layout_width="223dp"
        android:layout_height="138dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:background="#232323"
        android:textColor="#FFFFFF"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.593" />

    <ImageView
        android:id="@+id/dialog_img"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toTopOf="@+id/dialog_name_id"
        app:layout_constraintEnd_toEndOf="@+id/dialog_name_id"
        app:layout_constraintStart_toStartOf="@+id/dialog_name_id"
        app:layout_constraintTop_toTopOf="@+id/dialog_name_id"
        app:srcCompat="@drawable/pic_1" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Contact Name"
        android:textColor="#ffffff"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/dialog_name_id"
        app:layout_constraintEnd_toEndOf="@+id/dialog_name_id"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="@+id/dialog_name_id"
        app:layout_constraintTop_toBottomOf="@+id/dialog_img"
        app:layout_constraintVertical_bias="0.193" />

    <TextView
        android:id="@+id/dialog_name_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:text="TextView"

        android:textColor="#ffffff"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@+id/dialog_name_id"
        app:layout_constraintEnd_toEndOf="@+id/dialog_name_id"
        app:layout_constraintStart_toStartOf="@+id/dialog_name_id"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <Button
        android:id="@+id/Call"
        android:layout_width="223dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:background="@android:color/white"
        android:text="Mobile Call"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dialog_name_id" />

    <Button
        android:id="@+id/Message"
        android:layout_width="223dp"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:text="Use Messenger"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Call"/>

</android.support.constraint.ConstraintLayout>